<html>

<head>
    <style>
        * {
            box-sizing: border-box;
        }
        html {
            font-family: sans-serif;
            margin: 0;
        }
        body {
            background: #dec37c;
            color: white;
            display: flex;
            flex-direction: column;
            gap: 8px;
            margin: 0;
            padding: 8px;
            height: 100vh;
        }
        a {
            color: #4CFF32;
        }
        h1 {
            margin: 0;
            padding: 0 8px;
            background: #605031;
            border-color: #dec27c;
            border-style: inset;
        }
        .main-container {
            display: flex;
            flex-direction: row;
            gap: 8px;
            flex: 1;
            min-height: 0;
        }
        .main-container > * {
            background: #605031;
            border-color: #DEC27C;
            border-style: inset;
            flex: 1;
            padding: 8px;
            max-height: 100%;
            overflow: auto;
        }
        .license-list {
            min-width: 250px;
        }
        .license-list-item {
            white-space: nowrap;
            cursor: pointer;
            color: inherit;
            text-decoration: none;
        }
        .license-list-item:hover {
            color: #4cff32;
        }
        .license-list-item.selected {
            color: #4cff32;
        }
        .license-list-item, .license {
            display: none;
        }
        .license-container {
            flex: 3;
        }
        .license-text {
            white-space: pre-wrap;
        }
        h3 {
            margin-top: 0;
        }
    </style>
</head>

<body>
    <div class="intro">
        <h1>Third Party Licenses</h1>
    </div>

    <div class="main-container">
        <div class="licenses-overview">
            {{#each overview}}
            <div><a href="javascript:filter_licenses('{{id}}')">{{name}}</a> ({{count}})</div>
            {{/each}}
        </div>

        <div class="license-list">
            {{#each licenses}}
            {{#each used_by}}
            <a href="javascript:" class="license-list-item {{../id}}" onclick="javascript:view_license(this, '{{crate.name}}')">
                {{crate.name}}
            </a>
            {{/each}}
            {{/each}}
        </div>

        <div class="license-container">
            {{#each licenses}}
            {{#each used_by}}
            <div class="license" id="{{crate.name}}">
                <h3>
                    {{crate.name}} {{crate.version}}<br />
                    <a href="{{#if crate.repository}} {{crate.repository}} {{else}} https://crates.io/crates/{{crate.name}} {{/if}}">
                        (project link)
                    </a>
                </h3>
                
                <pre class="license-text">{{../text}}</pre>
            </div>
            {{/each}}
            {{/each}}
        </div>
    </div>
</body>

<script>
    let current_license = null;
    let current_filter = null;

    function view_license(button, id) {
        if (current_license) {
            document.getElementById(current_license.id).style.display = null;
            current_license.button.classList.remove("selected");
        }
        document.getElementById(id).style.display = "block";
        button.classList.add("selected");
        current_license = { button, id };
    }

    function filter_licenses(id) {
        if (current_filter) {
            for (const element of document.querySelectorAll(current_filter)) {
                element.style.display = null;
            }
        }
        current_filter = '.' + id.replace('.', '\\.');

        for (const element of document.querySelectorAll(current_filter)) {
            element.style.display = "block";
        }
    }
</script>

</html>
